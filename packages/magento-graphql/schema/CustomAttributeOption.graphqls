type CustomAttributeOptionOutput {
  raw: String!
  """
  Errors of retrieving certain attributes metadata.
  """
  errors: [AttributeMetadataError]!
  """
  Attribute options.
  """
  options: [CustomAttributeOptionInterface]
  """
  Requested attribute metadata.
  """
  attribute: CustomAttributeMetadataInterface
}

extend interface ProductInterface {
  """
  Returns the selected attribute option values for the product as well as the attribute metadata.
  """
  custom_attribute_option(attribute_code: String!): CustomAttributeOptionOutput
}
